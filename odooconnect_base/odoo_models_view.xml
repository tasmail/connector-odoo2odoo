<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_odoo_backend_form" model="ir.ui.view">
            <field name="name">odoo.backend.form</field>
            <field name="model">odoo.backend</field>
            <field name="arch" type="xml">
                <form string="Odoo Backend">
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline" />
                        </h1>
                        <separator string="Odoo Configuration"/>
                        <group colspan="4" col="4">
                            <field name="version" colspan="4"/>
                            <field name="location" placeholder="e.g. http://my.odoo.com:8069" colspan="2"/>
                            <field name="database" colspan="2" />
                            <field name="username" colspan="2"/>
                            <field name="password" password="1" colspan="2"/>
                        </group>
                        <notebook>
                            <page name="import" string="Imports">
                                <p class="oe_grey oe_inline">
                                    By clicking on the buttons,
                                    you will initiate the synchronizations
                                    with Magento.
                                    Note that the import or exports
                                    won't be done directly,
                                    they will create 'Jobs'
                                    executed as soon as possible.
                                </p>
                                <p class="oe_grey oe_inline">
                                    Once imported,
                                    some types of records,
                                    like the products or categories,
                                    need a manual review.
                                    You will find the list
                                    of the new records to review
                                    in the menu 'Connectors > Checkpoint'.
                                </p>
                                    <group>
                                    <label string="Import customers and suppliers from external Odoo" class="oe_inline"/>
                                    <button name="import_partners"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                    </group>
                                    <group>
                                    <div>
                                        <label string="Import products categories since" class="oe_inline"/>
                                        <field name="import_categories_from_date"
                                            class="oe_inline"
                                            nolabel="1"/>
                                    </div>
                                    <button name="import_product_categories"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                    </group>
                                    <group>
                                    <label string="Import users from external Odoo" class="oe_inline"/>
                                    <button name="import_users"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                    </group>
                                    <group>
                                    <label string="Import Products from external Odoo" class="oe_inline"/>
                                    <button name="import_product_product"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                    </group>
                                    <group>
                                    <label string="Import Sale Orders from external Odoo" class="oe_inline"/>
                                    <button name="import_sale_orders"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                    </group>
                            </page>
                            <page name="advanced_configuration" string="Advanced Configuration">
                                <group>
                                    <field name="default_lang_id" widget="selection"/>
                                    <field name="default_category_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_odoo_backend_tree" model="ir.ui.view">
            <field name="name">odoo.backend.tree</field>
            <field name="model">odoo.backend</field>
            <field name="arch" type="xml">
                <tree string="Odoo Backend">
                    <field name="name"/>
                    <field name="location"/>
                </tree>
            </field>
        </record>

        <record id="action_odoo_backend" model="ir.actions.act_window">
            <field name="name">Odoo Backends</field>
            <field name="res_model">odoo.backend</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_odoo_backend_tree"/>
        </record>
    </data>
</openerp>
